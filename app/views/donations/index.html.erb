<h1>Listing donations</h1>

<table>
  <tr>
    <th>In memory of</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Phone</th>
    <th>Amount</th>
    <th>Cc auth</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @donations.each do |donation| %>
  <tr>
    <td><%= donation.in_memory_of %></td>
    <td><%= donation.first_name %></td>
    <td><%= donation.last_name %></td>
    <td><%= donation.email %></td>
    <td><%= donation.address %></td>
    <td><%= donation.city %></td>
    <td><%= donation.state %></td>
    <td><%= donation.zip %></td>
    <td><%= donation.phone %></td>
    <td><%= donation.amount %></td>
    <td><%= donation.cc_auth %></td>
    <td><%= link_to 'Show', donation %></td>
    <td><%= link_to 'Edit', edit_donation_path(donation) %></td>
    <td><%= link_to 'Destroy', donation, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

